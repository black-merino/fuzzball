{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}",
      "args": [
        "--runInBand", 
        "--no-cache"
      ],
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}

